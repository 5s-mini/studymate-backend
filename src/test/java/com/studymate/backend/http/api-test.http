> {%
    try {
        if (response.body && response.body.trim() !== "") {
            const json = JSON.parse(response.body);
            if (json.token) {
                client.global.set("token", json.token);
                client.log("✅ Token saved successfully.");
            } else {
                client.log("⚠️ No 'token' field found in response.");
            }
        } else {
            client.log("⚠️ Empty response body.");
        }
    } catch (e) {
        client.log("⚠️ Failed to parse JSON: " + e.message);
    }
%}


